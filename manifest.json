{
  "manifest_version": 2,
  "name": "NetFlex",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/browse"
      ],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "images/19.png",
      "38": "images/38.png"
    },
    "default_popup": "popup.html",
    "default_title": "NetFlex"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
